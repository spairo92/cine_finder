/* Common style to all the pages of the website */

html, body {
    height: 100%;
}
/* The header is fixed, so the body should always be under it */
body{
    padding-top: 80px;
}
/* Dimensions of the header for the screens with width < 1100px */
@media screen and (max-width: 1100px){
    .container.site-header{
        width: 970px !important;
    }
    #rapidSearch{
        width: 180px !important;
    }
}
/* font used for the header title */
@font-face {
    font-family: 'Tangerine';
    font-style: normal;
    font-weight: 400;
    src: local('Tangerine'), url(../lib/fonts/tangerine.woff) format('woff');
}
/* Style of the header title ("CineFinder") */
#navbar-title{
    padding-right: 20px;
    font-family: 'Tangerine', serif;
    font-size: 35px !important;
    font-weight: bold;
    text-shadow: 4px 4px 4px black;
    color: #3A87CA;
}
#navbar-title:hover{
    color: yellow;
}
/* Wrapper for page content to push down footer */
#wrap{
    min-height: 100%;
    height: auto;
    margin: 0 auto -80px;
    padding: 0 0 80px;
    background-image: url(../images/angelina.png), url(../images/brad.png);
    background-repeat: no-repeat, no-repeat;
    background-position: top right, top left;
}
#wrap > .container {
    padding: 10px 15px 0;
}
#footer {
    text-align: center;
    height: 80px;
    background-image: linear-gradient(to bottom, rgb(60, 60, 60) 0px, rgb(34, 34, 34) 100%);
    background-repeat: repeat-x;
}
#footer > .container {
    padding-left: 15px;
    padding-right: 15px;
}
#footer .credit {
    margin: 20px 0;
}
#content{
    width: 700px;
    margin: auto;
    text-align: center;
}
.sectionTitle{
    text-align: center;
    margin-top: -20px;
    font-size: 50px !important;
    font-family: 'Tangerine', serif;
    font-weight: bold;
}
.jumbotron{
    padding-bottom: 30px !important;
    margin: auto;
}
.paragraphTitle{
    padding: 0px;
    margin-bottom: 20px;
    font-size: 21px;
    line-height: inherit;
    color: rgb(51, 51, 51);
    border-width: 0px 0px 1px;
    border-style: none none solid;
    border-color: -moz-use-text-color -moz-use-text-color rgb(229, 229, 229);
    -moz-border-top-colors: none;
    -moz-border-right-colors: none;
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    border-image: none;
}
.align-left {
    text-align: left;
}

/* index */
#carouselRecommendations img{
    height: 350px !important;
}

/* films mini-display (not the film view, only the films main information) */
.filmsDisplay {
    text-align: left;
}
.filmsDisplay img {
    width: 112px;
    float: left;
    margin-right: 20px;
    margin-bottom: 25px;
}
.filmsDisplay .infoFilm {
    display: block;
    float: left;
    width: 500px;
}
.filmsDisplay li {
    clear: both;
}
.filmName {
    font-weight: bold;
    font-size: 20px;
    margin-left: -1px;
}
.buyTicketsButton, .buyTicketsCinemaButton {
    float: right;
    margin-bottom: 20px !important;
    margin-top: -38px !important;
}

/* Section "search" */
#searchSection select{
    width: 300px;
    margin: auto;
}

/* View film */
#ulInfosFilm {
    text-align: left;
    float: left;
    max-width:360px;
}
#filmData ul {
    text-align: left;
}
#filmInfos img {
    width: 240px;
    float: right;
}
#filmData #onShowCinemas ul{
    margin-top: 10px;
    margin-bottom: 10px;
}
#filmData #onShowCinemas p{
    margin-top: -10px;
}
#filmData .popover {
    min-width: 400px !important;
}
#filmPhotos{
    margin-bottom: -50px;
}
#filmTrailer{
    margin-bottom: -40px;
}
.comment{
    text-align: left;
    margin: 15px;
    margin-bottom: 30px;
    background-color: #E8E5EE;
    padding: 10px;
}
.commentHeader {
    display: block;
    border-color: black;
    border-width: 0px 0px 1px;
    border-style: none none solid;
    padding-bottom: 2px;
}
.form-group {
    text-align: left;
}
.buttonLeft {
    float: left;
}
.buttonRight {
    float:right;
}
.buyTicketsButtonFilmView {
    width: 100%;
    height: 40px;
}
.buyTicketsButtonCinema {
    float: right;
    margin-top: -45px !important;
}

/* View cinema */
#map_canvas {
    height: 300px;
    width: 100%;
    border: 1px solid #C4C4C4;
    border-radius: 5px;
}

#room {
    padding: 15px 10px 15px 20px;
}
