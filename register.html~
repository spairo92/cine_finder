			<label for="inputAddress" class="col-sm-2 control-label">Address</label>
			<div class="col-sm-10">
			  <input type="address" class="form-control" id="inputAddress" placeholder="Enter your Address">
			</div>
		  </div>
		  <div id="locationGroup" class="form-group">
			<label for="inputLocation" class="col-sm-2 control-label">Location (Country)</label>
			<div class="col-sm-10">
			  <input type="location" class="form-control" id="inputLocation" placeholder="Enter your Location">
			</div>
		  </div>
		  <div id="postalCodeGroup" class="form-group">
			<label for="inputPostalCode" class="col-sm-2 control-label">Postal Code</label>
			<div class="col-sm-10">
			  <input type="postalCode" class="form-control" id="inputPostalCode" placeholder="Enter your Postal Code">
			</div>
		  </div>
		  
		  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
			  <div class="checkbox">
				<label>
				  <input type="checkbox"> I accept the licensing terms and conditions
				</label>
			  </div>
			</div>
		  </div>
		  <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
			  <input type="button" id="buttonSubmit" class="btn btn-default" value="Register" />
			  <input type="reset" class="btn btn-default" value="Reset" />
			</div>
		  </div>
		</form>
