<!DOCTYPE HTML>

<html>
  <head>
    <title>Register User</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	
	<!-- bootstrap framework -->
	<link rel="stylesheet" href="src/lib/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="src/lib/bootstrap/dist/css/bootstrap-theme.min.css">
	<script type="text/javascript" src="/src/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	
	<!-- jQuery -->
	<script type="text/javascript" src="src/lib/jquery/jquery-1.10.2.min.js"></script>
	<script type="text/javascript" src="src/lib/jquery/jquery-migrate-1.2.1.min.js"></script>
	
	<script type="text/javascript">
		    //Hiding the error message labels
    //$("#errorMessageUsername,#errorMessagePassword,#errorMessageEmail,#errorMessageName,#errorMessageLastName,#errorMessageMobile,#errorMessageAddress,#errorMessageLocation,#errorMessagePostalCode").hide();
    //Add the button functions to display the comment
	$(document).ready(function(){
		$("#buttonSubmit").click(function(){
    	var fieldsNotEmpty = new Boolean(true);

			//We remove error class and error labels in case of consecutive errors
			$("#usernameGroup").removeClass("has-error");
			$("#passwordGroup").removeClass("has-error");
			$("#emailGroup").removeClass("has-error");
			$("#firstNameGroup").removeClass("has-error");
			$("#lastNameGroup").removeClass("has-error");
			$("#mobileGroup").removeClass("has-error");
			$("#addressGroup").removeClass("has-error");
			$("#locationGroup").removeClass("has-error");
			$("#postalCodeGroup").removeClass("has-error");
			//$("#errorMessageUsername,#errorMessagePassword,#errorMessageEmail,#errorMessageName,#errorMessageLastName,#errorMessageMobile,#errorMessageAddress,#errorMessageLocation,#errorMessagePostalCode").hide();
			

			
			//We check the fields
			if ($("#inputUsername").val() == "") {
				//We show the error message label
				//$("#errorMessageUsername").show();
				//And we had the error class
				$("#usernameGroup").addClass("has-error");
				fieldsNotEmpty = false;
			} 
			if ($("#inputPassword3").val().length == 0) {
				$("#passwordGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputEmail3").val().length == 0) {
				$("#emailGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputName").val().length == 0) {
				$("#firstNameGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputLastName").val().length == 0) {
				$("#lastNameGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputMobile").val().length == 0) {
				$("#mobileGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputAddress").val().length == 0) {
				$("#addressGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputLocation").val().length == 0) {
				$("#locationGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
			if ($("#inputPostalCode").val().length == 0) {
				$("#postalCodeGroup").addClass("has-error");
				fieldsNotEmpty = false;
			}
	
			if (fieldsNotEmpty) {	
				//We create a new comment object
				var comment = new Comment($("#inputUsername").val(),$("#article").val(),new Date());
				
				//We display it
				displayOneComment(comment);
				
				//Clear the input fields
				$("#inputUsername,#inputPassword3,#inputEmail3,#inputName,#inputLastName,#inputMobile,#inputAddress,#inputLocation,#inputPostalCode").val("");
			}
		});
	
	});
    
	</script>
  </head>

	<body>
