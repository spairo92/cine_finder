	$(document).ready(function() { 
		var param = getInitParam();
		if (param == "genre")
			displaySearchGenreSection();
		else if (param == "director")
			displaySearchDirectorSection();
		else
			displaySearchNameSection();

		//Auto-completion
		$( "#searchBarName" ).autocomplete({source: allFilmNames});
		$( "#searchBarDirector" ).autocomplete({source: allDirectors});
